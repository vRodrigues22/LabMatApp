<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:gravity="center_vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical|center_horizontal"
    tools:context=".activities.CadastroActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="iPet"
        android:textSize="48sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-black"
        android:text="Crie sua conta"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-----------------------------------------------------------"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />



    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Nome"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_nome"
        android:layout_width="346dp"
        android:layout_height="61dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edit"
        android:drawableStart="@drawable/ic_user_on"
        android:drawablePadding="16dp"
        android:hint="Ex Alex Siza"
        android:inputType="text"
        android:padding="16dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Email"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="344dp"
        android:layout_height="68dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edit"
        android:drawableStart="@drawable/ic_email_red"
        android:drawablePadding="16dp"
        android:hint="Digite seu E-mail"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Senha"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_senha"
        android:layout_width="345dp"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edit"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="16dp"
        android:hint="Digite sua senha"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Confirmação de senha"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/edt_senhaconfirme"
        android:layout_width="339dp"
        android:layout_height="53dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edit"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="16dp"
        android:hint="Confirme sua senha"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/cadastroButtoncliente"
        android:layout_width="274dp"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"

        android:backgroundTint="#0934BD"
        android:background="@drawable/round_button"
        android:fontFamily="sans-serif-medium"
        android:onClick="validaDados"
        android:paddingStart="24dp"
        android:paddingTop="12dp"
        android:paddingEnd="24dp"
        android:paddingBottom="12dp"
        android:radius="90px"
        android:text="Cadastre-se"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textColorHighlight="#0934BD"

        android:textColorLink="#0934BD"
        android:textSize="20sp" />
</LinearLayout>
</ScrollView>
