<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LabirintoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <!-- Exibir o problema de matemática -->
        <TextView
            android:id="@+id/problem_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resolva o problema"
            android:textSize="20sp"
            android:padding="8dp"
            android:gravity="center"/>

        <!-- GridLayout para o labirinto -->
        <GridLayout
            android:id="@+id/labyrinth_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="5"
            android:padding="8dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp">

            <!-- Labirinto com Paredes, Caminhos e Personagem -->

            <!-- Linha 1 -->
            <ImageView
                android:id="@+id/btn_0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/character_icon" />

            <ImageView
                android:id="@+id/btn_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/path_icon" />

            <ImageView
                android:id="@+id/btn_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/wall_icon" />

            <ImageView
                android:id="@+id/btn_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/path_icon" />

            <ImageView
                android:id="@+id/btn_4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/path_icon" />

            <!-- Linha 2 -->
            <ImageView
                android:id="@+id/btn_5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/path_icon" />

            <ImageView
                android:id="@+id/btn_6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/wall_icon" />

            <ImageView
                android:id="@+id/btn_7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/path_icon" />

            <ImageView
                android:id="@+id/btn_8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/wall_icon" />

            <ImageView
                android:id="@+id/btn_9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/path_icon" />

            <!-- Linha 3 -->
            <ImageView
                android:id="@+id/btn_10"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/path_icon" />

            <ImageView
                android:id="@+id/btn_11"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/path_icon" />

            <ImageView
                android:id="@+id/btn_12"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/wall_icon" />

            <ImageView
                android:id="@+id/btn_13"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/path_icon" />

            <ImageView
                android:id="@+id/btn_14"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/path_icon" />

            <!-- Linha 4 -->
            <ImageView
                android:id="@+id/btn_15"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/path_icon" />

            <ImageView
                android:id="@+id/btn_16"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/wall_icon" />

            <ImageView
                android:id="@+id/btn_17"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/wall_icon" />

            <ImageView
                android:id="@+id/btn_18"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/path_icon" />

            <ImageView
                android:id="@+id/btn_19"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/path_icon" />

            <!-- Linha 5 -->
            <ImageView
                android:id="@+id/btn_20"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/path_icon" />

            <ImageView
                android:id="@+id/btn_21"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/path_icon" />

            <ImageView
                android:id="@+id/btn_22"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/path_icon" />

            <ImageView
                android:id="@+id/btn_23"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/path_icon" />

            <ImageView
                android:id="@+id/btn_24"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/goal_icon" /> <!-- Objetivo final -->

        </GridLayout>

        <!-- Campo para inserir a resposta -->
        <EditText
            android:id="@+id/answer_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Digite a resposta"
            android:inputType="number"
            android:padding="8dp"
            android:layout_gravity="center"/>

        <!-- Botão para verificar a resposta -->
        <Button
            android:id="@+id/submit_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar Resposta"
            android:layout_gravity="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
