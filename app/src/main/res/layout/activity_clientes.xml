<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:gravity="center_vertical"
    android:background= "@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|center_horizontal"
        tools:context=".activities.ClientesActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            android:text="LabMat"
            android:textSize="48sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            android:text="Seja bem-vindo!"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:text="-----------------------------------------------------------"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:text="Email"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_email2"
            android:layout_width="344dp"
            android:layout_height="68dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_email_red"
            android:background="@color/white"
            android:drawablePadding="16dp"
            android:hint="Digite seu E-mail"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:text="Senha"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_senha2"
            android:layout_width="345dp"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_password"
            android:background="@color/white"
            android:drawablePadding="16dp"
            android:hint="Digite sua senha"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/entrarButtoncliente"
            android:layout_width="230dp"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:text="Entrar"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/esqueceuSenhaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:text="Esqueceu a senha?"
            android:textSize="16sp"
      />

        <Button
            android:id="@+id/buttoncadastrocliente"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Cadastre-se"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
